@inherits ChacharViewDialogBase

<div class="modal-backdrop fade @ModalShow @ModalDisplay"></div>
<div class="modal fade @ModalShow @ModalDisplay" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header align-content-center">
                <div></div>
                <h2 class="modal-title fw-bold" id="theCharacter">@Chachar?.TheCharacter</h2>
                <button
                    @onclick="(_ => UnsetChachar())"
                    type="button"
                    class="btn btn-primary"
                    aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="card-text">
                    <span class="text-capitalize">@SafeLocalizer.GetString("Pinyin")</span>: <span class="text-uppercase">@Chachar?.Pinyin</span>
                </p>
                <p class="card-text">
                    <span class="text-uppercase">@SafeLocalizer.GetString("IPA")</span>: @Chachar?.Ipa
                </p>
                <p class="card-text">
                    <span class="text-capitalize">@SafeLocalizer.GetString("Strokes")</span>: @Chachar?.Strokes
                </p>
            </div>
        </div>
    </div>
</div>
