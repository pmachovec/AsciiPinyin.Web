@using AsciiPinyin.Web.Client.Pages.IndexComponents.ChacharsTabComponents.ChacharsCardsComponents
@using AsciiPinyin.Web.Shared.Models
@using Microsoft.AspNetCore.Components.Web

@inherits ChacharsCardsBase

<div class="row">
    <NewEntityCard ShowEntityForm="ShowChacharForm" />

    @foreach (var chachar in Chachars)
    {
        <EntityCard
            TEntity="Chachar"
            Body="@chachar.TheCharacter"
            Footer="@($"{chachar.Pinyin}{chachar.Tone}")"
            SelectEntity="@SelectChachar"
            SelectEntityArgument="@chachar" />
    }
</div>
<ChacharViewDialog @ref="ChacharViewDialog" />
