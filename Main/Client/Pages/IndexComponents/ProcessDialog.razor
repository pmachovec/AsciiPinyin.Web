@using AsciiPinyin.Web.Shared.Components
@using AsciiPinyin.Web.Shared.Constants
@using AsciiPinyin.Web.Shared.Resources
@using Microsoft.AspNetCore.Components.Web

@inherits ProcessDialogBase

<div
    class="modal fade @CssClasses.D_NONE"
    tabindex="-1"
    role="dialog"
    id="@RootId">
    <div
        class="modal-dialog modal-dialog-centered"
        role="document">
        <div
            class="modal-content"
            id="@IDs.PROCESS_DIALOG_MODAL_CONTENT">
            <div
                class="modal-header"
                id="@IDs.PROCESS_DIALOG_HEADER">
                <div class="fw-bold text-center text-uppercase text-white w-100">@HeaderText</div>
            </div>
            <div class="modal-body">
                <Loading
                    Id="@IDs.PROCESS_DIALOG_LOADING"
                    TextResource="@Resource.Processing" />
                <div id="@IDs.PROCESS_DIALOG_BODY_TEXT">@BodyText</div>
            </div>
            <div
                class="modal-footer border-0 bottom-0 end-0"
                id="@IDs.PROCESS_DIALOG_FOOTER">
                <button
                    type="button"
                    class="btn btn-modal btn-danger"
                    id="@IDs.PROCESS_DIALOG_BUTTON_BACK"
                    @onclick="async _ => await ModalCommons.CloseAsyncCommon(this, CancellationToken.None)">
                    <span>@Localizer[Resource.Back]</span>
                </button>
                <button
                    type="button"
                    class="btn btn-modal btn-primary ms-3"
                    id="@IDs.PROCESS_DIALOG_BUTTON_PROCEED"
                    @onclick="async _ => await ProceedAsync(CancellationToken.None)">
                    <span id="@IDs.PROCESS_DIALOG_BUTTON_PROCEED_TEXT">@ButtonProceedText</span>
                </button>
            </div>
        </div>
    </div>
</div>
