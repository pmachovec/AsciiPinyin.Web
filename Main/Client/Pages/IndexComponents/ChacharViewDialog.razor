@using AsciiPinyin.Web.Client.Components
@using AsciiPinyin.Web.Shared.Constants
@using AsciiPinyin.Web.Shared.Resources
@using BlazorBootstrap;
@using Microsoft.AspNetCore.Components.Web

@inherits ChacharViewDialogBase

<div
    class="modal fade @Classes"
    tabindex="-1"
    role="dialog"
    style="z-index: @ZIndex"
    id="@RootId">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-between">
                <div></div>
                <h2 class="modal-title fw-bold" id="theCharacter">@(Chachar?.TheCharacter ?? string.Empty)</h2>
                <CloseButton CloseAsync="@CloseAsync" CancellationToken="@CancellationToken.None" />
            </div>
            <div class="modal-body">
                <p class="card-text">
                    @($"{Localizer[Resource.Pinyin]}: {Chachar?.RealPinyin ?? string.Empty}")
                </p>
                <p class="card-text">
                    @($"{Localizer[Resource.Ipa]}: {Chachar?.Ipa ?? string.Empty}")
                </p>
                <p class="card-text">
                    @($"{Localizer[Resource.NumberOfStrokes]}: {Chachar?.Strokes?.ToString() ?? string.Empty}")
                </p>
            </div>
            <div class="modal-footer border-0">
                <Tooltip
                    Class="d-inline-block"
                    IsHtml="true"
                    Title="@DeleteTitle"
                    Id="@IDs.CHACHAR_VIEW_DIALOG_DELETE_TOOLTIP">
                    <button
                        type="button"
                        class="btn btn-modal btn-danger @DisableDeleteCss"
                        @onclick="async _ => await InitiateDeleteAsync(CancellationToken.None)">
                        <span>@Localizer[Resource.Delete]</span>
                    </button>
                </Tooltip>
                <button
                    type="button"
                    class="btn btn-modal btn-primary ms-3"
                    @onclick="async _ => await OpenFormAsync(CancellationToken.None)">
                    <span>@Localizer[Resource.Edit]</span>
                </button>
            </div>
        </div>
    </div>
</div>
