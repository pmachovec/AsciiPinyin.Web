@using AsciiPinyin.Web.Shared.Constants
@using AsciiPinyin.Web.Shared.Resources
@using Microsoft.AspNetCore.Components.Web

@inherits NavBarBase

<nav class="navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <input
                    class="nav-link tab-button text-dark @CssClasses.TEXT_DARK @(ChacharsTab?.Classes ?? string.Empty)"
                    type="button"
                    value="@Localizer[Resource.Characters]"
                    @onclick="async _ => await SelectTabAsync(ChacharsTab!, CancellationToken.None)" />
            </li>
            <li class="nav-item">
                <input
                    class="nav-link tab-button @CssClasses.TEXT_DARK @(AlternativesTab?.Classes ?? string.Empty)"
                    type="button"
                    value="@Localizer[Resource.Alternatives]"
                    @onclick="async _ => await SelectTabAsync(AlternativesTab!, CancellationToken.None)" />
            </li>
        </ul>
    </div>
</nav>
